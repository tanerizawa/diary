# .env file

# Database URL
# Untuk pengembangan lokal menggunakan SQLite (file database akan dibuat di root backend)
DATABASE_URL="sqlite:///./dear_diary.db"

# Secret key untuk enkripsi JWT.
# Ganti dengan string acak yang kuat. Anda bisa generate di sini: https://random-string-generator.com/
SECRET_KEY="REPLACE_WITH_YOUR_SECRET_KEY"

# Kunci API untuk layanan AI
AI_API_KEY="REPLACE_WITH_YOUR_AI_API_KEY"
AI_API_URL="https://openrouter.ai/api/v1/chat/completions"
AI_MODEL="google/gemini-2.0-flash-001"
